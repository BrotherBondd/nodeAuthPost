<%- include('partials/header') %>
    <div class="row mt-5">
        <div class="col-lg-5 mx-auto">
            <div class="card shadow">
                <div class="card-header">
                    <h2 class="fw-bold text-secondary">Forgot Password</h2>
                </div>
                <div class="card-body p-5">

                    <!-- Display flash messages if available -->
<% if (message.success) { %>
    <div id="flash-message" class="alert alert-success" role="alert">
        <strong><%= message.success %></strong>
    </div>
<% } %>
<% if (message.error) { %>
    <div id="flash-message" class="alert alert-danger" role="alert">
        <strong><%= message.error %></strong>
    </div>
<% } %>

<!-- JavaScript to set a timer for flash messages -->
<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Select the flash message element
        const flashMessage = document.getElementById('flash-message');
        
        // Check if the flash message exists
        if (flashMessage) {
            // Set a timer to hide the flash message after 5 seconds (5000 milliseconds)
            setTimeout(() => {
                flashMessage.style.display = 'none';
            }, 5000);
        }
    });
</script>



                    <form action="/forgot-password" method="post">
                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" name="email" id="email" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary w-100">Reset Password</button>
                        </div>
                        <div class="text-center">
                            <p>Go back to <a href="/login"> Login</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/footer') %>