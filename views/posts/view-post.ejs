<%- include('../partials/header') %>
    <div class="conteiner">
        <div class="row mt-5">
            <div class="col-lg-10 mx-auto">
                <div class="card shadow">

                    <div class="card-body p-5">
                        <img src="/uploads/<%= post.image %>" class="rounded img-fluid" width="100%" alt="<%= post.title %>">
                        <div
                            class="lead my-3 d-flex align-items-center fw-semibold justify-content-between text-secondary flex-wrap gap-2">
                            <div>Author: <%= post.user.name %>
                            </div>
                            <div>Created: <%= post.createdAt.toLocaleString() %>
                            </div>
                        </div>
                        <h1 class="text-secondary fw-bold">
                            <%= post.title %>
                        </h1>
                        <p>
                            <%= post.content %>
                        </p>



                        <div class="d-flex align-items-center justify-content-between">
                            <a href="/" class="btn btn-primary">Back</a>

                            <a href="/" class="btn btn-primary">Next</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/footer') %>